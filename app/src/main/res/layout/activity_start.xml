<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.seuxxd.miniproject.StartActivity">


    <TextView
        android:id="@+id/start_title"
        android:textColor="#de0f2a"
        android:textSize="24sp"
        android:paddingTop="16dp"
        android:layout_marginStart="8dp"
        android:text="@string/app_name"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/logo"
        android:background="@drawable/big_icon"
        android:layout_toStartOf="@id/start_title"
        android:layout_marginTop="128dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/start_subtitle"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/start_title"
        android:layout_marginTop="16dp"
        android:textColor="#de0f2a"
        android:text="@string/subtitle"
        android:layout_toEndOf="@id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <ImageButton
        android:id="@+id/qq_login"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/qq"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <TextView
        android:text="QQ授权登录"
        android:layout_centerInParent="true"
        android:layout_above="@id/qq_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
