<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/product_evaluation_list_user_img"
            android:layout_margin="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/product_evaluation_list_user_name"
            android:layout_toEndOf="@id/product_evaluation_list_user_img"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/product_evaluation_list_user_rate"
            android:text="@string/evaluation_list_user_rate"
            android:layout_margin="8dp"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@id/product_evaluation_list_user_img"
            android:layout_below="@id/product_evaluation_list_user_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            app:mrb_fillBackgroundStars="true"
            style="@style/Widget.MaterialRatingBar.RatingBar.Small"
            android:id="@+id/product_evaluation_list_user_star"
            android:numStars="5"
            android:stepSize="1"
            android:clickable="false"
            android:focusable="false"
            android:isIndicator="true"
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/product_evaluation_list_user_rate"
            android:layout_below="@id/product_evaluation_list_user_name"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/product_evaluation_list_user_comment"
            android:layout_below="@id/product_evaluation_list_user_rate"
            android:layout_marginHorizontal="16dp"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
