<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/dialog_first_login_close"
        android:src="@drawable/close"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:layout_width="20dp"
        android:layout_height="20dp" />
    <TextView
        android:id="@+id/dialog_first_login_message"
        android:layout_below="@id/dialog_first_login_close"
        android:text="@string/dialog_first_login_message"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/dialog_first_login_close_button"
        android:text="@string/dialog_first_login_close_button"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dialog_first_login_message"
        android:minHeight="16dp"
        android:minWidth="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>